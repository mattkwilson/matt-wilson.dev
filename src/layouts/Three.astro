---
export interface Props {
    id: string;
	src: string;
}

const { id, src } = Astro.props;
---

<div id={id} class="mx-auto w-full h-96 relative">
    <script type="module" src="https://unpkg.com/three"></script>
    <script type="module" src="https://unpkg.com/three@0.146.0/examples/js/controls/PointerLockControls.js"></script>
    <slot/>
    <script type='module' src={src}></script>
</div>



