---
import { Image, Picture } from '@astrojs/image/components';

export interface Props {
	images: ImageMetadata[];
}

const { images } = Astro.props;
---

{ 
    images.map((image) => (
        <Image src={image} alt="" class="absolute hover:cursor-pointer max-w-full max-h-full h-auto w-auto left-[50%] translate-x-[-50%] top-[50%] translate-y-[-50%]"/>
    )) 
}