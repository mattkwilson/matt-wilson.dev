---
export interface Props {
	email: string;
    linkedIn: string;
    github: string;
    shadertoy: string;
}

let { email, linkedIn, github, shadertoy } = Astro.props;
email = 'mailto:' + email;
---

<footer class="bg-black w-full fixed bottom-0">
    <div class="flex flex-row m-2.5 justify-center">
        <a class="mx-2 text-1xl text-slate-200 hover:text-slate-400 font-code" href={email}>Contact</a>
        <a class="mx-2 text-1xl text-slate-200 hover:text-slate-400 font-code" href={linkedIn}>LinkedIn</a>
        <a class="mx-2 text-1xl text-slate-200 hover:text-slate-400 font-code" href={github}>Github</a>
        <a class="mx-2 text-1xl text-slate-200 hover:text-slate-400 font-code" href={shadertoy}>Shadertoy</a>
    </div>
</footer>