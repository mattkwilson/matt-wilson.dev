---
export interface Props {
	src: string; 
    thumbnail?: string;
}

const { src, thumbnail } = Astro.props;

---

<video controls poster={thumbnail} muted autoplay class="absolute top=0 left=0 w-full h-full aspect-video">
    <source src={src} type="video/webm">
    This browser does not support HTML videos.
</video>